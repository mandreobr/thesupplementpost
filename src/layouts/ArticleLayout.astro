---
interface Props {
  title: string;
  description: string;
  canonicalUrl?: string;
}

const { title, description, canonicalUrl } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <meta name="description" content={description} />
    {canonicalUrl && <link rel="canonical" href={canonicalUrl} />}
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>

  <body>
    <main class="article-container">
      <article class="article-content">
        <slot />
      </article>
    </main>

    <style>
      .article-container {
        max-width: 860px;
        margin: 0 auto;
        padding: 2rem 1rem;
        font-family: system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
        line-height: 1.65;
      }

      h1 {
        font-size: 2.2rem;
        margin-bottom: 1rem;
      }

      h2 {
        margin-top: 2.5rem;
        margin-bottom: 1rem;
        font-size: 1.6rem;
      }

      h3 {
        margin-top: 1.8rem;
        font-size: 1.25rem;
      }

      ul {
        padding-left: 1.2rem;
      }

      table {
        width: 100%;
        border-collapse: collapse;
        margin: 2rem 0;
        font-size: 0.95rem;
      }

      table th,
      table td {
        border: 1px solid #ddd;
        padding: 0.6rem;
        text-align: left;
      }

      table th {
        background: #f5f5f5;
      }
    </style>
  </body>
</html>
