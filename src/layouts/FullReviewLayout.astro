---
interface Props {
  pageTitle: string;
  metaDescription: string;
  footerCtaLabel?: string;
  footerCtaUrl?: string;
  footerText?: string;
}

const { pageTitle, metaDescription, footerCtaLabel, footerCtaUrl, footerText } =
  Astro.props as Props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{pageTitle}</title>
    <meta name="description" content={metaDescription} />

    <!-- Inter font -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap"
      rel="stylesheet"
    />

    <style global>
      body {
        font-family: "Inter", sans-serif;
        color: #1f2937;
        background-color: #f3f4f6;
      }

      .text-primary {
        color: #2563eb;
      }
      .border-primary {
        border-color: #2563eb;
      }

      .review-shell {
        max-width: 960px;
        margin: 0 auto;
        padding: 2rem 1rem 3rem;
      }

      .review-card {
        background-color: #ffffff;
        border-radius: 1.25rem;
        box-shadow: 0 20px 45px rgba(15, 23, 42, 0.12);
        padding: 2.5rem 1.5rem;
      }

      @media (min-width: 768px) {
        .review-card {
          padding: 3.5rem 3rem;
        }
      }

      .markdown-prose {
        padding: 1rem 0;
      }

      .markdown-prose p:not(.image-caption) {
        margin-bottom: 1.5rem;
        font-size: 1.0625rem;
        line-height: 1.8;
        text-align: justify;
      }

      .markdown-prose h2 {
        font-size: 1.9rem;
        font-weight: 800;
        color: #111827;
        margin-top: 3rem;
        margin-bottom: 1.25rem;
        padding-bottom: 0.4rem;
        border-bottom: 3px solid #2563eb;
      }

      .markdown-prose h3 {
        font-size: 1.35rem;
        font-weight: 700;
        margin-top: 2.25rem;
        margin-bottom: 0.9rem;
        color: #111827;
      }

      .markdown-prose ul,
      .markdown-prose ol {
        padding-left: 1.3rem;
        margin-bottom: 1.5rem;
        font-size: 1.02rem;
      }
      .markdown-prose ul {
        list-style: disc;
      }
      .markdown-prose ol {
        list-style: decimal;
      }
      .markdown-prose ul li,
      .markdown-prose ol li {
        margin-bottom: 0.4rem;
      }

      .cta-block {
        text-align: center;
        margin: 3rem auto;
        max-width: 550px;
      }

      .btn-primary {
       display: inline-block;
       padding: 0.75rem 2.25rem;   
       background-color: #2563eb;
       color: #ffffff;
       font-weight: 600;           
       border-radius: 0.9rem;
       transition: all 0.25s ease;
       box-shadow: 0 12px 25px rgba(37, 99, 235, 0.45);
      }

      .btn-primary:hover {
        background-color: #1d4ed8;
        transform: translateY(-1px);
        box-shadow: 0 18px 35px rgba(37, 99, 235, 0.6);
      }
/* CTA 4 – Blue full-width banner before tags */
.markdown-prose .cta-banner {
  width: 100%;
  background-color: #2563eb;      
  border-radius: 0%;
  padding: 2rem 0%;
  margin: 2rem auto 1rem;
  box-shadow: 0 18px 40px rgba(37, 99, 235, 0.35);
}

.markdown-prose .cta-banner-inner {
  max-width: 900px;
  margin: 0 auto;
  text-align: center;
}

.markdown-prose .cta-banner-title {
  color: #ffffff;
  font-size: 1.6rem;               /* ~24px */
  font-weight: 800;
  margin-bottom: 1rem;
  border-bottom: none;             /* remove aquela linha azul do h2 padrão */
}

.markdown-prose .cta-banner-button {
  display: inline-block;
  padding: 0.9rem 2.75rem;
  border-radius: 9999px;
  border: 2px solid #ffffff;       /* borda branca */
  background: transparent;
  color: #ffffff;
  font-size: 1rem;                 /* ~16px */
  font-weight: 700;
  text-decoration: none;
  transition: all 0.2s ease;
  box-shadow: 0 12px 30px rgba(0, 0, 0, 0.15);
}

.markdown-prose .cta-banner-button:hover {
  background: #ffffff;
  color: #2563eb;
  box-shadow: 0 18px 40px rgba(37, 99, 235, 0.45);
  transform: translateY(-2px);
}


      .cta-button {
       font-size: 0.9rem !important;   
       color: #ffffff !important;
       text-decoration: none !important;
      }

      .intro-box {
        padding: 1.3rem 1.5rem;
        background-color: #eff6ff;
        border-left: 5px solid #2563eb;
        border-radius: 0 0.9rem 0.9rem 0;
        margin-bottom: 2rem;
        font-style: italic;
        font-weight: 500;
        font-size: 1.03rem;
        line-height: 1.7;
        text-align: justify;
      }

      .pros-cons-title {
        margin-top: 3rem;
        margin-bottom: 0.75rem;
        font-size: 1.9rem;
        font-weight: 800;
        color: #111827;
        border-bottom: 3px solid #2563eb;
        padding-bottom: 0.4rem;
      }

      .pros-cons-block {
        display: grid;
        grid-template-columns: 1fr;
        gap: 1.75rem;
        margin: 1.75rem 0 2.5rem;
      }
      @media (min-width: 768px) {
        .pros-cons-block {
          grid-template-columns: repeat(2, 1fr);
        }
      }
      .pros-cons-block .pros,
      .pros-cons-block .cons {
        padding: 1.5rem 1.4rem;
        border-radius: 0.75rem;
        box-shadow: 0 6px 16px rgba(15, 23, 42, 0.06);
        border: 1px solid #e5e7eb;
      }
      .pros-cons-block .pros {
        background-color: #ecfdf3;
        border-left: 4px solid #16a34a;
      }
      .pros-cons-block .cons {
        background-color: #fef2f2;
        border-left: 4px solid #ef4444;
      }
      .pros-cons-block h3 {
        margin-top: 0 !important;
        margin-bottom: 0.7rem;
      }
      .pros-cons-block ul li {
        margin-bottom: 0.7rem;
        line-height: 1.65;
      }

      .pricing-table-container {
        overflow-x: auto;
        margin-top: 2.25rem;
        margin-bottom: 2.25rem;
        border-radius: 1rem;
        box-shadow: 0 12px 30px rgba(15, 23, 42, 0.08);
        border: 1px solid #e5e7eb;
      }
      .pricing-table {
        width: 100%;
        border-collapse: collapse;
        min-width: 650px;
        background-color: #ffffff;
      }
      .pricing-table th,
      .pricing-table td {
        padding: 0.75rem 1rem;
        text-align: center;
        font-size: 0.95rem;
        border-bottom: 1px dashed #e5e7eb;
        vertical-align: middle;
      }
      .pricing-table thead th {
        background-color: #f9fafb;
        font-weight: 700;
        border-bottom: 2px solid #e5e7eb;
      }

      .pricing-table .row-label {
        text-align: left;
        font-weight: 600;
        color: #111827;
      }
      .pricing-table .bold-black {
        font-weight: 700;
        color: #000000;
      }

      .ingredient-card-list {
        display: grid;
        gap: 0.9rem;
        margin-top: 0.75rem;
      }
      .ingredient-card {
        padding: 1rem 1.1rem;
        background-color: #f5f8ff;
        border-radius: 0.75rem;
        border: 1px solid #e0e7ff;
      }
      .ingredient-card h3 {
        margin-top: 0 !important;
        margin-bottom: 0.3rem;
        font-size: 1.05rem;
        font-weight: 700;
      }

      .tag-container {
        margin-top: 2.5rem;
        padding-top: 1.5rem;
        border-top: 1px solid #e5e7eb;
      }
      .tag-item {
        display: inline-block;
        background-color: #f3f4f6;
        color: #4b5563;
        padding: 0.25rem 0.85rem;
        border-radius: 9999px;
        font-size: 0.86rem;
        margin: 0.25rem;
        border: 1px solid #e5e7eb;
        white-space: nowrap;
      }

      .hero-image,
      .label-image,
      .benefits-image {
        max-width: 100%;
        height: auto;
        display: block;
        margin: 0 auto;
        border-radius: 0;
        box-shadow: none;
        border: none;
        object-fit: contain;
        background-color: transparent;
      }
      .hero-image {
        max-height: 340px;
      }
      .label-image {
        max-height: 360px;
        cursor: zoom-in;
      }
      .benefits-image {
        max-height: 320px;
      }

      .image-caption {
        font-size: 0.75rem;
        color: #6b7280;
        margin-top: 0.5rem;
        text-align: center;
        font-style: italic;
      }

      .site-header {
        background-color: #ffffff;
        border-bottom: 1px solid #e5e7eb;
        box-shadow: 0 2px 8px rgba(15, 23, 42, 0.04);
      }

      .site-header-inner {
        max-width: 1120px;
        margin: 0 auto;
        padding: 1rem 1.5rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
      }

      .site-logo {
        font-size: 1.1rem;
        font-weight: 800;
        letter-spacing: 0.08em;
        color: #2563eb;
        text-transform: uppercase;
        text-decoration: none;
      }

      .site-nav {
        display: flex;
        gap: 1.5rem;
        font-size: 0.95rem;
        font-weight: 500;
      }

      .site-nav a {
        color: #4b5563;
        text-decoration: none;
      }

      .site-nav a:hover {
        color: #2563eb;
      }

      .final-verdict {
        background-color: #eff6ff;
        border: 1px solid #2563eb;
        border-radius: 0.9rem;
        padding: 2.25rem 1.75rem;
        margin: 2.5rem 0 2.75rem;
        box-shadow: 0 10px 25px rgba(15, 23, 42, 0.1);
      }

      .final-verdict-title {
        font-size: 1.5rem;
        font-weight: 800;
        text-align: center;
        color: #111827;
        margin-bottom: 1rem;
      }

      @media (min-width: 768px) {
        .final-verdict-title {
          font-size: 1.9rem;
        }
      }

      .final-verdict-divider {
        width: 60%;
        max-width: 420px;
        height: 1px;
        background-color: #2563eb;
        margin: 0 auto 1.3rem;
      }

      .markdown-prose .final-verdict-body {
        margin-bottom: 0;
        font-size: 1.02rem;
        line-height: 1.8;
        text-align: left;
        color: #111827;
        max-width: 700px;
        margin-left: auto;
        margin-right: auto;
      }

      /* ===== FOOTER CTA ===== */

      .footer-cta-wrapper {
        margin-top: 2.5rem;
      }

      .footer-cta-banner {
        width: 100%;
        background-color: #2563eb;
        color: #ffffff;
        border-radius: 1rem;
        padding: 2.25rem 1.75rem;
        text-align: center;
        box-shadow: 0 18px 40px rgba(37, 99, 235, 0.55);
      }

      .footer-cta-title {
        font-size: 1.4rem;
        font-weight: 800;
        margin-bottom: 1rem;
      }

      @media (min-width: 768px) {
        .footer-cta-title {
          font-size: 1.7rem;
        }
      }

      .footer-cta-button {
        display: inline-block;
        margin-top: 0.75rem;
        padding: 0.9rem 2.9rem;
        border-radius: 9999px;
        border: 2px solid #ffffff;
        background-color: #ffffff;
        color: #2563eb;
        font-weight: 800;
        font-size: 1rem;
        text-decoration: none;
        box-shadow: 0 14px 35px rgba(15, 23, 42, 0.35);
        transition: all 0.22s ease;
      }

      .footer-cta-button:hover {
        background-color: #e5edff;
        transform: translateY(-1px);
        opacity: 0.96;
      }

      .footer-copy {
        text-align: center;
        font-size: 0.78rem;
        color: #9ca3af;
        margin-top: 1.75rem;
      }

      /* Box estilizada para seção "Does [Product] Really Work?" */
.does-work-box {
  margin: 2rem 0 2.5rem;
  padding: 1.75rem 1.75rem 1.5rem;
  border-radius: 1rem;
  background-color: #eff6ff; /* azul bem claro */
  border-left: 5px solid #2563eb;
  box-shadow: 0 18px 45px rgba(15, 23, 42, 0.11);
}

.does-work-item + .does-work-item {
  margin-top: 1.25rem;
  padding-top: 1.25rem;
  border-top: 1px solid rgba(148, 163, 184, 0.4);
}

.does-work-item h3 {
  font-size: 1.05rem;
  font-weight: 700;
  margin-bottom: 0.35rem;
  color: #111827;
}

.does-work-item p {
  margin: 0;
  color: #1f2933;
}

    </style>
  </head>

  <body class="min-h-screen flex flex-col antialiased">
    <header class="site-header">
      <div class="site-header-inner">
        <a href="/" class="site-logo">BEST SUPPLEMENTS TODAY</a>
        <nav class="site-nav">
          <a href="/">Home</a>
          <a href="/reviews">Reviews</a>
        </nav>
      </div>
    </header>

    <main class="flex-grow">
      <div class="review-shell">
        <article class="review-card">
          <section class="markdown-prose">
            <slot />
          </section>
        </article>

        {footerCtaLabel && footerCtaUrl && (
          <div class="footer-cta-wrapper">
            <div class="footer-cta-banner">
              <h3 class="footer-cta-title">{footerCtaLabel}</h3>

              <a
                href={footerCtaUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="footer-cta-button"
              >
                Visit Official Website Now
              </a>
            </div>
          </div>
        )}

        <p class="footer-copy">
          {footerText ?? "© 2025 Best Supplements Today. All rights reserved."}
        </p>
      </div>
    </main>
  </body>
</html>
