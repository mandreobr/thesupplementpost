---
import BaseLayout from "./BaseLayout.astro";

interface Props {
  pageTitle: string;
  metaDescription: string;
  footerCtaLabel?: string;
  footerCtaUrl?: string;
  footerText?: string;
  canonicalUrl?: string;
}

const {
  pageTitle,
  metaDescription,
  footerCtaLabel,
  footerCtaUrl,
  footerText,
  canonicalUrl,
} = Astro.props;
---

<BaseLayout
  pageTitle={pageTitle}
  metaDescription={metaDescription}
  canonicalUrl={canonicalUrl}
>
  <style global>
    body {
      font-family: "Inter", sans-serif;
      color: #1f2937;
      background-color: #f3f4f6;
      margin: 0;
      padding-top: 72px;
    }

    .text-primary {
      color: #2563eb;
    }
    .border-primary {
      border-color: #2563eb;
    }

    .review-shell {
      max-width: 960px;
      margin: 0 auto;
      padding: 2rem 1rem 3rem;
    }

    .review-card {
      background-color: #ffffff;
      border-radius: 1.25rem;
      box-shadow: 0 20px 45px rgba(15, 23, 42, 0.12);
      padding: 2.5rem 1.5rem;
    }

    @media (min-width: 768px) {
      .review-card {
        padding: 3.5rem 3rem;
      }
    }

    .markdown-prose {
      padding: 1rem 0;
    }

    .markdown-prose p:not(.image-caption) {
      margin-bottom: 1.5rem;
      font-size: 1.0625rem;
      line-height: 1.8;
      text-align: justify;
    }

    .markdown-prose h1 {
      font-size: 2rem;
      font-weight: 800;
      color: #111827;
      margin-top: 0;
      margin-bottom: 1.25rem;
    }

    .markdown-prose h2 {
      font-size: 1.9rem;
      font-weight: 800;
      color: #111827;
      margin-top: 3rem;
      margin-bottom: 1.25rem;
      padding-bottom: 0.4rem;
      border-bottom: 3px solid #2563eb;
    }

    .markdown-prose h3 {
      font-size: 1.35rem;
      font-weight: 700;
      margin-top: 2.25rem;
      margin-bottom: 0.9rem;
      color: #111827;
    }

    .markdown-prose ul,
    .markdown-prose ol {
      padding-left: 1.3rem;
      margin-bottom: 1.5rem;
      font-size: 1.02rem;
    }

    .intro-box {
      padding: 1.3rem 1.5rem;
      background-color: #eff6ff;
      border-left: 5px solid #2563eb;
      border-radius: 0 0.9rem 0.9rem 0;
      margin-bottom: 2rem;
      font-style: italic;
      font-weight: 500;
      font-size: 1.03rem;
      line-height: 1.7;
      text-align: justify;
    }

    /* INGREDIENT CARDS */
    .ingredient-card-list {
      display: grid;
      gap: 0.9rem;
      margin-top: 0.75rem;
    }

    .ingredient-card {
      padding: 1rem 1.1rem;
      background-color: #f5f8ff;
      border-radius: 0.75rem;
      border: 1px solid #e0e7ff;
    }

    .ingredient-card h3 {
      margin-top: 0 !important;
      margin-bottom: 0.3rem;
      font-size: 1.05rem;
      font-weight: 700;
    }

    /* IMAGENS */
    .hero-image,
    .label-image,
    .benefits-image {
      max-width: 100%;
      height: auto;
      display: block;
      margin: 0 auto;
      object-fit: contain;
      background-color: transparent;
    }

    .hero-image {
      max-height: 340px;
    }

    .label-image {
      max-height: 360px;
      cursor: zoom-in;
    }

    .image-caption {
      font-size: 0.75rem;
      color: #6b7280;
      margin-top: 0.5rem;
      text-align: center;
      font-style: italic;
    }

    /* HEADER */
    .site-header {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      z-index: 40;
      background-color: #30b7cf;
      border-bottom: 1px solid #e5e7eb;
      box-shadow: 0 2px 8px rgba(15, 23, 42, 0.08);
      transition: background-color 0.2s ease, box-shadow 0.2s ease;
    }

    .site-header.header-scrolled {
      background-color: rgba(48, 183, 207, 0.92);
      box-shadow: 0 4px 12px rgba(15, 23, 42, 0.18);
      backdrop-filter: blur(4px);
    }

    .site-header-inner {
      max-width: 1120px;
      margin: 0 auto;
      padding: 0.5rem 1.5rem;
      display: flex;
      align-items: center;
      justify-content: center;
      min-height: 60px;
    }

    .site-logo-image {
      height: 60px;
      max-width: 220px;
      object-fit: contain;
    }

    /* FOOTER CTA */
    .footer-cta-wrapper {
      margin-top: 2.75rem;
    }

    .footer-cta-banner {
      background: #111827;
      color: #f9fafb;
      border-radius: 1rem;
      padding: 1.75rem 1.5rem;
      text-align: center;
      box-shadow: 0 16px 36px rgba(15, 23, 42, 0.55);
    }

    .footer-cta-title {
      font-size: 1.2rem;
      font-weight: 700;
      margin-bottom: 0.9rem;
    }

    .footer-cta-button {
      display: inline-block;
      padding: 0.85rem 2.6rem;
      border-radius: 999px;
      background-color: #2563eb;
      color: #ffffff;
      font-weight: 600;
      font-size: 0.98rem;
      text-decoration: none;
    }

    .footer-copy {
      margin-top: 1.75rem;
      font-size: 0.82rem;
      color: #6b7280;
      text-align: center;
    }
  </style>

  <header class="site-header">
    <div class="site-header-inner">
      <a href="/">
        <img
          src="/images/1.Home/logo.png"
          alt="The Supplement Post logo"
          class="site-logo-image"
        />
      </a>
    </div>
  </header>

  <main class="flex-grow">
    <div class="review-shell">
      <article class="review-card">
        <section class="markdown-prose">
          <slot />
        </section>
      </article>

      {footerCtaLabel && footerCtaUrl && (
        <div class="footer-cta-wrapper">
          <div class="footer-cta-banner">
            <h3 class="footer-cta-title">{footerCtaLabel}</h3>
            <a href={footerCtaUrl} class="footer-cta-button">
              Visit Official Website Now
            </a>
          </div>
        </div>
      )}

      <p class="footer-copy">
        {footerText ?? "Â© The Supplement Post. All rights reserved."}
      </p>
    </div>
  </main>

  <script>
    if (typeof window !== "undefined") {
      const header = document.querySelector(".site-header");
      const onScroll = () => {
        if (!header) return;
        header.classList.toggle("header-scrolled", window.scrollY > 10);
      };
      window.addEventListener("scroll", onScroll);
    }
  </script>
</BaseLayout>
