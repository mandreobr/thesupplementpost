      if (carouselViewport && carouselTrack && prevBtn && nextBtn) {
        const getStep = () => {
          const firstItem = carouselTrack.querySelector(".carousel-item");
          if (!firstItem) return carouselViewport.clientWidth;
          const itemRect = firstItem.getBoundingClientRect();
          return itemRect.width + 18; // largura + gap (18px)
        };

        prevBtn.addEventListener("click", () => {
          carouselViewport.scrollBy({
            left: -getStep(),
            behavior: "smooth",
          });
        });

        nextBtn.addEventListener("click", () => {
          carouselViewport.scrollBy({
            left: getStep(),
            behavior: "smooth",
          });
        });
      }
    </script>
  </body>
</html>
