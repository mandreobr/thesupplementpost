<style>
  .categories-page {
    min-height: 100vh;
    background: #e5e7eb;
    display: flex;
    flex-direction: column;
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  }

  /* HEADER */
  .page-header {
    background: #ffffff;
    border-bottom: 1px solid #e5e7eb;
    box-shadow: 0 2px 4px -2px rgba(15, 23, 42, 0.12);
  }

  .header-inner {
    max-width: 1200px;
    margin: 0 auto;
    padding: 14px 24px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .site-title a {
    color: #1e3a8a;
    font-weight: 800;
    letter-spacing: 0.14em;
    font-size: 16px;
    text-transform: uppercase;
    text-decoration: none;
  }

  .header-nav a {
    color: #6b7280;
    font-weight: 600;
    font-size: 14px;
    text-decoration: none;
  }

  .header-nav a:hover {
    color: #1e3a8a;
  }

  /* MAIN */
  .page-main {
    flex: 1;
    display: flex;
    justify-content: center;
    padding: 40px 16px 60px;
  }

  .page-box {
    width: 100%;
    max-width: 1200px;
    background: #ffffff;
    border-radius: 28px;
    border: 1px solid #e5e7eb;
    box-shadow: 0 18px 50px -15px rgba(0, 0, 0, 0.15);
    padding: 50px 40px;
  }

  .intro {
    text-align: center;
    margin-bottom: 40px;
  }

  .intro h1 {
    color: #1e3a8a;
    font-size: 38px;
    font-weight: 800;
    margin-bottom: 12px;
  }

  .intro p {
    color: #4b5563;
    font-size: 17px;
    max-width: 900px;
    margin: 0 auto;
  }

  /* GRID */
  .categories-grid {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: 24px;
  }

  @media (min-width: 640px) {
    .categories-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .categories-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  /* CARDS */
  .category-card {
    background: #ffffff;
    border: 1px solid #e5e7eb;
    border-radius: 22px;
    padding: 28px;
    text-decoration: none;
    color: #1f2937;
    box-shadow: 0 12px 20px -8px rgba(0, 0, 0, 0.08);
    transition: 0.25s ease;
  }

  .category-card:hover {
    transform: translateY(-6px);
    border-color: #1e3a8a;
    box-shadow: 0 20px 40px -12px rgba(30, 64, 175, 0.25);
    background: #f9fafb;
  }

  .icon-wrapper {
    width: 48px;
    height: 48px;
    margin-bottom: 16px;
  }

  .icon-wrapper svg {
    width: 100%;
    height: 100%;
    stroke: #1e3a8a;
    fill: none;
    stroke-width: 2.3;
    stroke-linecap: round;
    stroke-linejoin: round;
  }

  .category-card h2 {
    font-size: 20px;
    font-weight: 700;
    color: #1e3a8a;
    margin-bottom: 10px;
  }

  .category-card p {
    font-size: 15px;
    color: #6b7280;
    margin-bottom: 18px;
  }

  .card-link {
    font-size: 15px;
    font-weight: 600;
    color: #1e3a8a;
  }

  /* FOOTER */
  .page-footer {
    text-align: center;
    font-size: 13px;
    color: #6b7280;
    padding: 22px 0 30px;
  }

  /* =========
     AJUSTES MOBILE
     ========= */
  @media (max-width: 640px) {
    .header-inner {
      padding: 12px 16px;
    }

    .site-title a {
      font-size: 14px;
      letter-spacing: 0.1em;
    }

    .header-nav a {
      font-size: 14px;
    }

    .page-main {
      padding: 24px 10px 40px;
    }

    .page-box {
      padding: 28px 18px;
      border-radius: 20px;
    }

    .intro {
      margin-bottom: 28px;
    }

    .intro h1 {
      font-size: 26px;
      line-height: 1.2;
    }

    .intro p {
      font-size: 15px;
    }

    .icon-wrapper {
      width: 56px;
      height: 56px;
      margin-bottom: 14px;
    }

    .category-card {
      padding: 22px;
    }

    .category-card h2 {
      font-size: 18px;
    }

    .category-card p {
      font-size: 14px;
    }

    .card-link {
      font-size: 14px;
    }

    .page-footer {
      font-size: 12px;
    }
  }
</style>
