---
import FullReviewLayout from "../../layouts/FullReviewLayout.astro";
import { getCollection } from "astro:content";

// ğŸ”¥ Gera todas as pÃ¡ginas de reviews automaticamente
export async function getStaticPaths() {
  const reviews = await getCollection("reviews");

  return reviews.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

// ğŸ”¥ Recebe o conteÃºdo individual de cada review
const { entry } = Astro.props;
const data = entry.data;
const { Content } = await entry.render();
---

<FullReviewLayout
  pageTitle={data.pageTitle}
  metaDescription={data.metaDescription}
  footerCtaLabel={data.footerCtaLabel}
  footerCtaUrl={data.footerCtaUrl}
  footerText={data.footerText}
>
  <Content />
</FullReviewLayout>
